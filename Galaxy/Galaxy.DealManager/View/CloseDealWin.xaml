<dxr:DXRibbonWindow  x:Class="Galaxy.DealManager.View.CloseDealWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Galaxy.DealManager.View"
        xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
        mc:Ignorable="d"
        Title="Settle Deal" Height="300" Width="820" >

        <Grid>
            <Grid HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top">
                <local:DealFormUserCtrl   />
            </Grid>

        <Button Content="Save" HorizontalAlignment="Left" Command="{Binding Path=InsertDealCmd}" Margin="670,226,0,0" VerticalAlignment="Top" Height="25" Width="90"/>
        </Grid>

</dxr:DXRibbonWindow>
