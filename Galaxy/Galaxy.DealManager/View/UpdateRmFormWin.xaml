<dxr:DXRibbonWindow x:Class="Galaxy.DealManager.View.UpdateRmFormWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:dxr="http://schemas.devexpress.com/winfx/2008/xaml/ribbon"
        xmlns:view="clr-namespace:Galaxy.DealManager.View"
        Title="Current Deal" Height="300" Width="820"  WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid HorizontalAlignment="Left" Margin="20,20,0,0" VerticalAlignment="Top">
            <view:DealFormUserCtrl   />
        </Grid>

        <Button Content="Update" HorizontalAlignment="Left" Command="{Binding Path=UpdateDealCmd}" Margin="681,217,0,0" VerticalAlignment="Top" Height="25" Width="90"/>
        <Button Content="Remove" HorizontalAlignment="Left" Command="{Binding Path=RemoveDealCmd}" Margin="569,217,0,0" VerticalAlignment="Top" Height="25" Width="90"/>
    </Grid>
</dxr:DXRibbonWindow>
